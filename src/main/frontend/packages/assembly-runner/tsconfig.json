{
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "module": "es2020",
      "target": "es2022",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "declaration": true,
      "skipLibCheck": true,
      "lib": ["es2018"],
      "downlevelIteration": true,
      "strictNullChecks": false
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "../../src/**/*"]
  }
  